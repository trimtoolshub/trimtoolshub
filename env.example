# Environment Configuration for TrimToolsHub
# Copy this file to .env and fill in your actual values

# Site Configuration
VITE_SITE_URL=https://www.trimtoolshub.com

# Google Analytics 4 (Required for analytics after consent)
# Get your Measurement ID from: https://analytics.google.com/
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Meta Pixel (Optional - for Facebook/Meta tracking)
VITE_META_PIXEL_ID=your-pixel-id

# Google AdSense (Required for ads after consent)
# Get your Publisher ID from: https://www.google.com/adsense/
VITE_ADSENSE_CLIENT=ca-pub-XXXXXXXXXX

# AdSense Slot IDs (Optional - for specific ad placements)
VITE_ADSENSE_SLOT_HOME_TOP=your-slot-id
VITE_ADSENSE_SLOT_HOME_HERO=your-slot-id
VITE_ADSENSE_SLOT_HOME_BOTTOM=your-slot-id
VITE_ADSENSE_SLOT_PDF_TOP=your-slot-id
VITE_ADSENSE_SLOT_QR_TOP=your-slot-id
VITE_ADSENSE_SLOT_BARCODES_TOP=your-slot-id
VITE_ADSENSE_SLOT_CAD_TOP=your-slot-id
VITE_ADSENSE_SLOT_IMAGES_TOP=your-slot-id
VITE_ADSENSE_SLOT_FOOTER=your-slot-id

# Feature Toggles
VITE_ENABLE_ADS=true

